{% extends 'app/base.twig' %}

{% block title %}Choisir le type de compte {% endblock %}
{% block content %}
  <div class="slave-login size">
    <div class="img">
      <img src="{{ ogImage('images/logo.png','webp') }}" alt="Slave Control">
    </div>

    <div class="mt-3 row justify-content-center">
      {% for type in typeAccount %}
        <div class="col-12 col-lg-3">
          <a href="{{ path('app_choice',{type:type}) }}" class="type-account">
              <div class="item">
                <img width="50px" height="50px" src="/images/type/{{ type }}.svg">
                <span>{{ ('type_'~type)|trans }}</span>
              </div>
          </a>
        </div>
      {%endfor %}
    </div>
  </div>
{% endblock %}
