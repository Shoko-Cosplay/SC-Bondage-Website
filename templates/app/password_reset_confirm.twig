{% extends 'app/base.twig' %}

{% block title %}
  Redéfinir mon mot de passe
{% endblock %}

{% block description %}
  Redéfinir mon mot de passe
{% endblock %}

{% block content %}
  <div class="mt-3 container contact">
    <div class="login_form">
      <div class="login-container">
        <h2>
          Redéfinir mon mot de passe
        </h2>
        {% for key,flashItem in app.flashes %}
          {% if key == "forgot_form" %}
            <div class="alert alert-success">
              {{ flashItem[0] }}
            </div>
          {% endif %}
        {% endfor %}

        {{ form_start(form) }}
        {{ form_row(form.password.first, {label: 'Nouveau mot de passe'}) }}
        {{ form_row(form.password.second, {label: 'Confirmer le nouveau mot de passe'}) }}
        <button type="submit" class="btn btn-login">Réinitialiser mon mot de passe</button>
        {{ form_end(form) }}
      </div>
    </div>
  </div>
{% endblock %}
