{% extends 'app/base.twig' %}
{% block title %}{{ title }}{% endblock %}
{% block titlePage %}{{ title }}{% endblock %}

{% block content %}
  <div class="slave-login">
    <div class="img">
      <img src="{{ ogImage('images/logo.png','webp') }}" alt="Slave Control">
    </div>
    {% if error %}
      <div class="alert alert-danger">
        {{ error.messageKey | trans(error.messageData, 'security') }}
      </div>
    {% endif %}
    <form method="post">
      <div class="form-group">
        <label>Adresse email</label>
          <input type="email" required class="form-control" value="{{ last_username }}">
      </div>
      <div class="form-group">
        <label>Mot de passe</label>
        <input type="text" required class="form-control">
      </div>
      <h2>Je me connecte en tant que </h2>
      <div class="row">
        <div class="col-12 col-lg-6">
          <button class="btn btn-master">Maitre</button>
        </div>
        <div class="col-12 col-lg-6">
          <button class="btn btn-slave">Esclave / Selft Bondage</button>
        </div>
      </div>

      <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

      <a href="{{ path('app_forgot') }}" class="link mt-2">Mot de passe perdue ?</a>

      <h2>Nouveaux Maitre / Esclave ?</h2>
      <a href="{{ path('app_register') }}">Cr√©e mon compte</a>
    </form>
  </div>
{% endblock %}
